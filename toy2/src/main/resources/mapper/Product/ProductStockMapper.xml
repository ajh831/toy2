<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fastcampus.toy2.dao.Product.ProductStockMapper">
    <!-- count -->
    <select id="count">
        SELECT count(*)
        FROM product_stock
    </select>
    <!-- select -->
    <sql id="select">
        SELECT
            style_num,
            p_size,
            p_stock,
            sale_state,
            created_dt,
            created_id,
            updated_dt,
            updated_id
        FROM product_stock
    </sql>
    <!-- -->
    <select id="selectByStyleNum" parameterType="String" resultType="ProductStockDto">
        <include refid="select" />
        WHERE style_num = #{style_num}
    </select>

    <!-- insert -->
    <!-- update -->
    <!-- delete -->


    <!--  product_id가 일치하는 style_num 별로 사이즈와 재고 조회  -->
    <select id="selectByProductId" parameterType="String" resultType="ProductStockDto">
        <include refid="select" />
        WHERE style_num LIKE #{product_id};
    </select>

</mapper>